@using CarDealership.Models;

<h1>Welcome to the car dealership</h1>
@if (Model.Count == 0)
{
  <p>There are no cars on the lot</p>
}
<ul>
  @foreach (Car car in Model)
  {
    <li>@car.MakeModel</li>
    <li>@car.Message</li>
    <li>@car.Price</li>
    <li>@car.Miles</li>
  }
</ul>
<a href="/cars/new">Add a new item.</a>
